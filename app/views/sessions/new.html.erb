<%= flash[:error] if flash[:error] %>

<h1>Login</h1>

<%= form_for @user, url: sessions_create_path, method: :post do |f| %>
    <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </p>
    <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
    </p>
    <%= f.submit 'Login'%>
<% end %>
